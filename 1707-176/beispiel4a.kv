Screen:
    beschriftung: ''
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.8
            canvas:
                Color:
                    rgba: 1,0,0,0.3
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: root.beschriftung
        BoxLayout:
            size_hint_y: 0.2
            Label:
                text: root.beschriftung
