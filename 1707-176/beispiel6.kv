ScreenManagement:
    Main:
    Setup:

<Main>:
    name: 'main'
    beschriftung: ''
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.8
            canvas:
                Color:
                    rgba: 1,0,0,0.3
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: root.beschriftung
            Button:
                text: 'zum Setup'
                on_release: root.manager.current = 'setup'
        BoxLayout:
            size_hint_y: 0.2
            Label:
                text: root.beschriftung
<Setup>:
    name: 'setup'
    Button:
        text: 'zu Main'
        on_release: root.manager.current = 'main'
